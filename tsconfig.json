{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false, 
    "alwaysStrict": true,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "include": [
    "./src/*.ts",
    "./src/*.tsx",
  ]
}
